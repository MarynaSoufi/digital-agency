                <div class="item home__projects__list__item__element card h-100">
                    <img src='../static/images/{{p.data.project.thumb}}.svg' class="card-img-top image--card" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">{{p.data.project.title}}</h5>
                        <h6 class="card-title">Ordered by: {{p.data.client.name}}</h6>

                    </div>
                </div>
            </a>
        {% endfor %}
        </div>
    </div>
